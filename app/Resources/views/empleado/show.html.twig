{% extends 'base.html.twig' %}

{% block body %}
    <h1>Empleado</h1>
    <hr/>
        
    <table>
        <tbody>
            <tr>
                <th>Idempleado</th>
                <td>{{ empleado.idEmpleado }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ empleado.nombre }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ empleado.direccion }}</td>
            </tr>
            <tr>
                <th>Nit</th>
                <td>{{ empleado.nit }}</td>
            </tr>
            <tr>
                <th>Dpi</th>
                <td>{{ empleado.dpi }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ empleado.telefono }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ empleado.usuario }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ empleado.password }}</td>
            </tr>
        </tbody>
    </table>

    <hr/>
    <ul>
            <a class="btn btn-primary" href="{{ path('empleado_index') }}">Regresar</a>        
            <a class="btn btn-warning" href="{{ path('empleado_edit', { 'id': empleado.idEmpleado }) }}">Edit</a>        
    </ul>
{% endblock %}
